<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frag_person"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/event_frag_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="17dp"
        app:srcCompat="@android:drawable/star_big_on" />

    <TextView
        android:id="@+id/person_frag_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/event_frag_loc"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/event_frag_loc"
        android:text="TextView" />

    <TextView
        android:id="@+id/person_frag_family"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/person_frag_name"
        android:layout_below="@+id/person_frag_name"
        android:text="TextView" />
</RelativeLayout>