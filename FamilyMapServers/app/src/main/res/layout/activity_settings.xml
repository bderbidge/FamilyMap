<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.brandonderbidge.familymapserver.Activities.SettingsActivity">

    <GridLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:rowCount="6"
        android:columnCount="3">

        <TextView
            android:id="@+id/life_story_text"
            android:layout_width="132dp"
            android:layout_height="30dp"
            android:layout_column="0"
            android:layout_row="0"
            android:text="User Lines"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <Spinner
            android:id="@+id/life_story_spinner"
            android:layout_width="109dp"
            android:layout_height="30dp"
            android:layout_column="1"
            android:layout_row="0"></Spinner>

        <Switch
            android:id="@+id/life_story_switch"
            android:layout_width="116dp"
            android:layout_height="30dp"
            android:layout_column="2"
            android:layout_row="0"
            android:text="Switch" />


        <TextView
            android:id="@+id/family_text"
            android:layout_width="132dp"
            android:layout_height="30dp"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Family Lines"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <Spinner
            android:id="@+id/family_spinner"
            android:layout_width="108dp"
            android:layout_height="30dp"
            android:layout_column="1"
            android:layout_row="1"></Spinner>

        <Switch
            android:id="@+id/family_switch"
            android:layout_width="115dp"
            android:layout_height="30dp"
            android:layout_column="2"
            android:layout_row="1"
            android:text="Switch" />


        <TextView
            android:id="@+id/spouse_text"
            android:layout_width="132dp"
            android:layout_height="30dp"
            android:layout_column="0"
            android:layout_row="2"
            android:text="Spouse Line"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <Spinner
            android:id="@+id/spouse_spinner"
            android:layout_width="109dp"
            android:layout_height="30dp"
            android:layout_column="1"
            android:layout_row="2"></Spinner>

        <Switch
            android:id="@+id/spouse_switch"
            android:layout_width="116dp"
            android:layout_height="30dp"
            android:layout_column="2"
            android:layout_row="2"
            android:text="Switch" />


        <TextView
            android:id="@+id/google_text"
            android:layout_width="132dp"
            android:layout_height="34dp"
            android:layout_column="0"
            android:layout_row="3"
            android:text="Map Type"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <Spinner
            android:id="@+id/google_spinner"
            android:layout_width="132dp"
            android:layout_height="30dp"
            android:layout_column="2"
            android:layout_row="3"></Spinner>

        <TextView
            android:id="@+id/ReSync"
            android:layout_width="132dp"
            android:layout_height="34dp"
            android:layout_column="0"
            android:layout_row="4"
            android:text="Re-sync Data"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/logout"
            android:layout_width="132dp"
            android:layout_height="34dp"
            android:layout_column="0"
            android:layout_row="5"
            android:text="Logout"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />


    </GridLayout>




</android.support.constraint.ConstraintLayout>
